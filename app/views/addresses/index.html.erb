<div class="mx-auto" style="width: 200px;">
  <h1>Addresses</h1>
</div>

<table class="table table-striped table-bordered table-hover" style="width:100%" id="addresses-datatable", data-source="<%= addresses_path(format: :json) %>">
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Street</th>
      <th>Building</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

  </tbody>
</table>

<script>
  jQuery(document).ready(function() {
  $('#addresses-datatable').dataTable({
    "processing": true,
    "serverSide": true,
    "ajax": {
      "url": $('#addresses-datatable').data('source')
    },
    "pagingType": "full_numbers",
    "columns": [
      {"data": "street_id"},
      {"data": "building"},
      {"data": "description"},
      {"data": "actions"}
    ]
  });
});
</script>

<%= link_to 'New Address', new_address_path, class: "btn btn-outline-info"  %>
