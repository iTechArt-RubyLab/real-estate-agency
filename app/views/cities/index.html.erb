<p id="notice"><%= notice %></p>

<div class="mx-auto" style="width: 200px;">
  <h1>Cities</h1>
</div>

<table class="table table-bordered table-hover mt-3">
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Name</th>
      <th>Locality size</th>
      <th>Region</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.locality_size %></td>
        <td><%= city.region %></td>
        <td><%= city.description %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New City', new_city_path, class: "btn btn-outline-info" %>

