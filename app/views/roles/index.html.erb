<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Can read lot</th>
      <th>Can edit lot</th>
      <th>Can asign</th>
      <th>Can read dictionary</th>
      <th>Can edit dictionary</th>
      <th>Can give permission</th>
      <th>Can work with all property types</th>
      <th>Can create role</th>
      <th>Can approve realtor</th>
      <th>Can freeze user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.can_read_lot %></td>
        <td><%= role.can_edit_lot %></td>
        <td><%= role.can_asign %></td>
        <td><%= role.can_read_dictionary %></td>
        <td><%= role.can_edit_dictionary %></td>
        <td><%= role.can_give_permission %></td>
        <td><%= role.can_work_with_all_property_types %></td>
        <td><%= role.can_create_role %></td>
        <td><%= role.can_approve_realtor %></td>
        <td><%= role.can_freeze_user %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

