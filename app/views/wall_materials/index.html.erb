<p id="notice"><%= notice %></p>

<div class="mx-auto" style="width: 200px;">
  <h1>Wall Materials</h1>
</div>

<table class="table table-striped table-bordered table-hover" style="width:100%" id="wall_materials-datatable", data-source="<%= wall_materials_path(format: :json) %>">
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<script>
  jQuery(document).ready(function() {
  $('#wall_materials-datatable').dataTable({
    "processing": true,
    "serverSide": true,
    "ajax": {
      "url": $('#wall_materials-datatable').data('source')
    },
    "pagingType": "full_numbers",
    "columns": [
      {"data": "name"},
      {"data": "actions"}
    ]
  });
});
</script>

<%= link_to 'New Wall Material', new_wall_material_path, class: "btn btn-outline-info" %>
