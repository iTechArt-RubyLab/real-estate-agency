<div class="mx-auto" style="width: 200px;">
 <h1>Lots</h1>
</div>

<table class="table table-striped table-bordered table-hover" style="width:100%" id="lots-datatable", data-source="<%= lots_path(format: :json) %>" >
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Deal type</th>
      <th>City</th>
      <th>District</th>
      <th>Street</th>
      <th>Building</th>
      <th>Address description</th>
      <th>Type</th>
      <th>Asigner</th>
      <th>Asignee</th>
      <th>Client</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<script>
  jQuery(document).ready(function() {
  $('#lots-datatable').dataTable({
    "processing": true,
    "serverSide": true,
    "ajax": {
      "url": $('#lots-datatable').data('source')
    },
    "pagingType": "full_numbers",
    "columns": [
      {"data": "title"},
      {"data": "description"},
      {"data": "price"},
      {"data": "deal_type_id"},
      {"data": "city"},
      {"data": "district"},
      {"data": "street"},
      {"data": "building"},
      {"data": "address_description"},
      {"data": "lotable_type"},
      {"data": "asigner"},
      {"data": "asignee"},
      {"data": "client"},
      {"data": "actions"}
    ]
  });
});
</script>
