<div class="mx-auto" style="width: 600px;">
  <h1>Commercial Premises Kinds</h1>
</div>

<table class="table table-striped table-bordered table-hover" style="width:100%" id="commercial_premises_kinds-datatable", data-source="<%= commercial_premises_kinds_path(format: :json) %>" >
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<script>
  jQuery(document).ready(function() {
  $('#commercial_premises_kinds-datatable').dataTable({
    "processing": true,
    "serverSide": true,
    "ajax": {
      "url": $('#commercial_premises_kinds-datatable').data('source')
    },
    "pagingType": "full_numbers",
    "columns": [
      {"data": "name"},
      {"data": "actions"}
    ]
  });
});
</script>

<%= link_to 'New Commercial Premises Kind', new_commercial_premises_kind_path, class: "btn btn-outline-info" %>
