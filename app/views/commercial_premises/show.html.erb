<p style="text-align: center;">
  <% if @commercial_premise.lot.images.attached? %>
    <% @commercial_premise.lot.images.each do |image| %>
      <%= image_tag image.variant(resize_to_limit: [250, 250]).processed %>
    <% end %>
  <% end %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>State:</strong>
  <%= @commercial_premise.lot.state %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Title:</strong>
  <%= @commercial_premise.lot.title %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Description:</strong>
  <%= @commercial_premise.lot.description %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Price:</strong>
  <%= @commercial_premise.lot.price %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Deal type:</strong>
  <%= @commercial_premise.lot.deal_type.name %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>City:</strong>
  <%= @commercial_premise.lot.address.street.district.city.name %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>District:</strong>
  <%= @commercial_premise.lot.address.street.district.name %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Street:</strong>
  <%= @commercial_premise.lot.address.street.name %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Building:</strong>
  <%= @commercial_premise.lot.address.building %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Address description:</strong>
  <%= @commercial_premise.lot.address.description %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Kind:</strong>
  <%= @commercial_premise.commercial_premises_kind.name %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Area:</strong>
  <%= @commercial_premise.area %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Floor:</strong>
  <%= @commercial_premise.floor %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Number of premises:</strong>
  <%= @commercial_premise.number_of_premises %>
</p>

<p style="text-align: center; font-size: 20px">
  <strong>Plot of land:</strong>
  <%= @commercial_premise.plot_of_land %>
</p>

<% if current_user.role.can_edit_lot %>
  <p style="text-align: center; font-size: 20px">
    <strong>Asigner:</strong>
    <% if @commercial_premise.lot.asigner.nil? %>
      <%= 'Asigner not match' %>
    <% else %>
      <%= @commercial_premise.lot.asigner.full_name %>
    <% end %>
  </p>

  <p style="text-align: center; font-size: 20px">
    <strong>Asignee:</strong>
    <% if @commercial_premise.lot.asignee.nil? %>
      <%= 'Asignee not match' %>
    <% else %>
      <%= @commercial_premise.lot.asignee.full_name %>
    <% end %>
  </p>

  <p style="text-align: center; font-size: 20px">
    <strong>Client:</strong>
    <% if @commercial_premise.lot.client.nil? %>
      <%= 'Client not match' %>
    <% else %>
      <%= @commercial_premise.lot.client.full_name %>
    <% end %>
  </p>

  <div class="actions mb-2 d-grid gap-2 col-1 mx-auto">
    <%= link_to 'Edit', edit_commercial_premise_path(@commercial_premise), class: "btn btn-warning" %>
  </div>
<% end %>

<div class="actions mb-2 d-grid gap-2 col-1 mx-auto">
  <%= link_to 'Back', commercial_premises_path, class: "btn btn-danger" %>
</div>
