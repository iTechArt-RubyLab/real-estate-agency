<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @district.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @district.city.name %>
</p>

<%= link_to 'Edit', edit_district_path(@district), class: "btn btn-warning" %>
<%= link_to 'Back', districts_path, class: "btn btn-danger" %>

<h4 class="mt-5">Streets of <%= @district.name %> district</h4>

<table class="table table-bordered table-hover mt-3">
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Street</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @district.streets.each do |street| %>
      <tr>
        <td ><%= street.name %></td>
        <td><%= link_to 'Show', street %></td>
        <td><%= link_to 'Edit', edit_street_path(street) %></td>
        <td><%= link_to 'Destroy', street, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>