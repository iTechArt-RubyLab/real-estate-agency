<p id="notice"><%= notice %></p>

<div class="mx-auto" style="width: 200px;">
  <h1>Districts</h1>
</div>

<table class="table table-striped table-bordered table-hover" style="width:100%" id="districts-datatable", data-source="<%= districts_path(format: :json) %>">
  <thead>
    <tr style="background-color: #C8EEFF;">
      <th>Name</th>
      <th>City</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<script>
  jQuery(document).ready(function() {
  $('#districts-datatable').dataTable({
    "processing": true,
    "serverSide": true,
    "ajax": {
      "url": $('#districts-datatable').data('source')
    },
    "pagingType": "full_numbers",
    "columns": [
      {"data": "name"},
      {"data": "city_id"},
      {"data": "actions"}
    ]
  });
});
</script>

<%= link_to 'New District', new_district_path, class: "btn btn-outline-info" %>
